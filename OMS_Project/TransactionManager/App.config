<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
	<system.serviceModel>
		<services>
			<service name="TransactionManager.TransactionManagerService">
				<endpoint binding="netTcpBinding" contract="Common.Transaction.ITransactionManager" bindingConfiguration="binding"/>
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:11124/ITransactionManager/"/>
					</baseAddresses>
				</host>
			</service>
		</services>
		<bindings>
			<netTcpBinding>
				<binding name="binding" transferMode="Streamed" maxReceivedMessageSize="2147483647"/>
			</netTcpBinding>
		</bindings>
	</system.serviceModel>
</configuration>